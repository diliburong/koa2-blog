.row
	.article-category-side.column.column-20
		.new-category-section
			.new-category-add
				i.fa.fa-plus
				span New create
			.new-category-form.hidden
				input(type="hidden" name="_csrf" value=csrf)
				input(type="text" placeholder="Enter the new Category Name" name="newCategoryName")
				button.button.button-outline.btn-small#btn-create Create
				button.button.button-clear.btn-small#btn-cancel Cancel
			ul.category-list
				each item in categories
					- if(category)
						li(id=item.id class=Utils.isActive(item.name, category.name)).category-item #{item.name}
					- else
						li(id=item.id).category-item #{item.name}
	.article-form.column.column-60

		form.note-form(action=articleFormPath method="post")
			input(type="hidden" name="_csrf" value=csrf)
			input(type="hidden", name="categoryId")
			input#hidden-content(type="hidden" value=articleContent)
			input.title#intput-title(type="text" name="note_title" placeholder="Article Title" value=articleTitle)
			textarea#markdown-editor(name="content")
			input(type="submit" value="submit")