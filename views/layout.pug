doctype html
html
  head
    block head
      title= title
      link(rel='stylesheet', href='/stylesheets/style.css')
      link(rel='stylesheet', href='/stylesheets/main.css')
      link(rel="stylesheet", href="/stylesheets/custom.css")
    meta(name='viewport', content='user-scalable=no, width=device-width, initial-scale=1.0, maximum-scale=1.0')
  body
    main.wrapper
      nav.navigation
        section.container
          a(href="/").navigation-title.float-left
            h1.title Stutter
          ul.navigation-list.float-left
            li.navigation-item
              a(href="#" class=Utils.isActive('home', nav)).navigation-link Home
            li.navigation-item
              a(href="#" class=Utils.isActive('article', nav)).navigation-link Article
            li.navigation-item
              a(href="#" class=Utils.isActive('about', nav)).navigation-link About
          ul.navigation-list.float-right
            - if(!isUserLogin)
              li.navigation-item-right
                a(href="/login").navigation-link Login
            - else
              li.navigation-item-right
                .dropdown
                  a(href="/logout").avatar
                    img.av(src="//upload.jianshu.io/users/upload_avatars/4998423/12ac3879-1262-410e-beef-684db0667e53.jpg?imageMogr2/auto-orient/strip|imageView2/1/w/120/h/120", alt="")
                  
                ul.dropdown-menu
                  li.dropdown-menu-item
                    a(href="/logout") Logout
                  li.dropdown-menu-item
                    a(href="/") My Home
      block content
    
    footer.footer
      p
        | Power by stutter   
        a(href="https://github.com/diliburong/koa2-blog") &nbsp Â© stutter

    block dynamicJs
